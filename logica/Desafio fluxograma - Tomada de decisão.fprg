                <then>
                    <output expression="&quot;Parab&#233;ns! Voc&#234; recebeu um abono de 10%.&quot;" newline="True"/>
                    <output expression="media + ((media / 10) * 100)" newline="True"/>
                </then>
                <else>
                    <output expression="&quot;Foi bom mas pode melhorar, voc&#234; recebeu um abono de 3%.&quot;" newline="True"/>
                    <output expression="media + ((media / 3) * 100)" newline="True"/>
                </else>
            </if>
        </body>
